<!DOCTYPE html>
<html>
<head>
    <title>Jeu de culture générale</title>
</head>
<body>
    <script>
        function jeu_de_culture_generale() {
            alert("Bienvenue dans le jeu de culture générale !");
            alert("Vous allez devoir répondre à des questions sur la culture générale.");
            alert("Il y a 5 questions. Chacune est composée de 4 options, vous devez choisir la bonne réponse en entrant le numéro de l'option.");
            alert("Vous avez 3 vies, si vous répondez mauvais, vous perdez une vie.");
            alert("Bonne chance !");

            let vies = 3;
            let score = 0;
            let correct_answers = {1: 3, 2: 1, 3: 2, 4: 4, 5: 1};

            let reponse = prompt("Êtes-vous prêt(e) ? (Oui ou non)");
            if (reponse.toLowerCase() === 'oui') {
                alert("C'est parti !");
            } else {
                alert("D'accord, à la prochaine fois !");
                return;
            }

            while (vies > 0) {
                alert("Question 1 : Quel est la capitale de l'Australie ?");
                alert("1. Sydney");
                alert("2. Melbourne");
                alert("3. Camberra");
                alert("4. Darwin");
                reponse = parseInt(prompt("Votre réponse : "));
                if (reponse === correct_answers[1]) {
                    alert("Bonne réponse !");
                    score++;
                } else {
                    alert("Mauvaise réponse.");
                    alert("Dommage ! La bonne réponse était : 3. Camberra.");
                    vies--;
                }

                if (vies <= 0) {
                    alert("Tu as perdu !");
                    alert("Vous n'avez plus de vies.");
                    reponse = prompt("Voulez-vous retenter votre chance ? (Oui ou non)");
                    if (reponse.toLowerCase() === 'oui') {
                        alert("C'est parti !");
                        jeu_de_culture_generale();
                    } else {
                        alert("D'accord, à la prochaine fois !");
                    }
                    return;
                }

                alert("Question 2 : Quel est la plus grande chaîne de montagnes du monde?");
                alert("1. Andes");
                alert("2. Himalaya");
                alert("3. Alpes");
                alert("4. Montagnes rocheuses");
                reponse = parseInt(prompt("Votre réponse : "));
                if (reponse === correct_answers[2]) {
                    alert("Bonne réponse !");
                    score++;
                } else {
                    alert("Mauvaise réponse.");
                    alert("Dommage ! La bonne réponse était : 1. Andes.");
                    vies--;
                }

                if (vies <= 0) {
                    alert("Tu as perdu !");
                    alert("Vous n'avez plus de vies.");
                    reponse = prompt("Voulez-vous retenter votre chance ? (Oui ou non)");
                    if (reponse.toLowerCase() === 'oui') {
                        alert("C'est parti !");
                        jeu_de_culture_generale();
                    } else {
                        alert("D'accord, à la prochaine fois !");
                    }
                    return;
                }

                alert("Question 3 : Quelle ville a construit le premier métro ?");
                alert("1. Paris");
                alert("2. Londres");
                alert("3. Madrid");
                alert("4. New York");
                reponse = parseInt(prompt("Votre réponse : "));
                if (reponse === correct_answers[3]) {
                    alert("Bonne réponse !");
                    score++;
                } else {
                    alert("Mauvaise réponse.");
                    alert("Dommage ! La bonne réponse était : 2. Londres.");
                    vies--;
                }

                if (vies <= 0) {
                    alert("Tu as perdu !");
                    alert("Vous n'avez plus de vies.");
                    reponse = prompt("Voulez-vous retenter votre chance ? (Oui ou non)");
                    if (reponse.toLowerCase() === 'oui') {
                        alert("C'est parti !");
                        jeu_de_culture_generale();
                    } else {
                        alert("D'accord, à la prochaine fois !");
                    }
                    return;
                }

                alert("Question 4 : Lequel des cinq sens manque au serpent ?");
                alert("1. Le toucher");
                alert("2. Le goût");
                alert("3. L'odorat");
                alert("4. L'ouïe");
                reponse = parseInt(prompt("Votre réponse : "));
                if (reponse === correct_answers[4]) {
                    alert("Bonne réponse !");
                    score++;
                } else {
                    alert("Mauvaise réponse.");
                    alert("Dommage ! La bonne réponse était : 4. L'ouïe.");
                    vies--;
                }

                if (vies <= 0) {
                    alert("Tu as perdu !");
                    alert("Vous n'avez plus de vies.");
                    reponse = prompt("Voulez-vous retenter votre chance ? (Oui ou non)");
                    if (reponse.toLowerCase() === 'oui') {
                        alert("C'est parti !");
                        jeu_de_culture_generale();
                    } else {
                        alert("D'accord, à la prochaine fois !");
                    }
                    return;
                }

                alert("Question 5 : Dans la mythologie grecque, combien de dieux trônent à l'Olympe ?");
                alert("1. 12");
                alert("2. 8");
                alert("3. 7");
                alert("4. 10");
                reponse = parseInt(prompt("Votre réponse : "));
                if (reponse === correct_answers[5]) {
                    alert("Bonne réponse !");
                    score++;
                } else {
                    alert("Mauvaise réponse.");
                    alert("Dommage ! La bonne réponse était : 1. 12.");
                    vies--;
                }
            }

            alert("Vous avez terminé le jeu de culture générale !");
            alert("Votre score est de " + score + " sur 5.");
            alert("Vous avez " + vies + " vies restantes.");

            reponse = parseInt(prompt("Voulez-vous rejouer ?\n1. Oui\n2. Non"));
            if (reponse === 1) {
                jeu_de_culture_generale();
            } else {
                alert("Merci d'avoir joué !");
            }
        }

        jeu_de_culture_generale();
    </script>
</body>
</html>
